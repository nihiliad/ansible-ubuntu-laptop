"" vim-plug

" Meta-note: Do we really need these first two if blocks anymore? Left over
" from NeoBundle.

" Note: Skip initialization for vim-tiny or vim-small.
if 0 | endif

if &compatible
set nocompatible               " Be iMproved
endif

if empty(glob('{{ vim_autoload_dir }}/plug.vim'))
  silent !curl -fLo {{ vim_autoload_dir }}/plug.vim --create-dirs
    \ https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
  autocmd VimEnter * PlugInstall --sync | source $MYVIMRC
endif

call plug#begin('{{ vim_plugins_dir }}')

Plug 'flazz/vim-colorschemes'
Plug 'bling/vim-airline'
" indicate the current git branch in the status line:
Plug 'tpope/vim-fugitive'
Plug 'evidens/vim-twig', {'for': 'twig'}

call plug#end()

"" color scheme stuff

" from http://vim.wikia.com/wiki/256_colors_in_vim
syntax enable

" This causes the text to blink in some (16-color) terminals, including Macs.
set t_Co=256

" Enforce a transparent background:
hi Normal ctermbg=NONE

"" Airline

" Always show status line.
set laststatus=2

" Automatically populate the g:airline_symbols dictionary with the powerline symbols.
let g:airline_powerline_fonts=1

" Show a tabline of open buffers.
let g:airline#extensions#tabline#enabled = 1
